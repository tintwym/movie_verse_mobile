<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Base application theme -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue_100</item>
    </style>

    <style name="GenreCheckboxCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/genre_card_bg_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/genre_card_stroke_color</item>
    </style>

    <style name="BlueProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/progress_blue</item>
    </style>

    <style name="BottomNavigationCenteredText">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Text color -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Search icon color -->
        <item name="android:tint">@color/white</item>
        <!-- Cursor color -->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#404040</item>
        <item name="colorControlActivated">#4CAF50</item>
    </style>
</resources>
